#!/bin/bash
# Football Predictor Aliases
# Add to ~/.bashrc or source this file: source ~/game/fb_aliases

# ============================================================
# PREDICTION ALIASES
# ============================================================

# Predict match from URL
alias pf='source ~/game/football_env/bin/activate && python ~/game/football_prediction_system.py predict --url'

# Add match result
alias pfr='source ~/game/football_env/bin/activate && python ~/game/football_prediction_system.py result --url'

# ============================================================
# TRAINING ALIASES
# ============================================================

# Train model
alias pft='source ~/game/football_env/bin/activate && python ~/game/football_prediction_system.py train'

# Auto-train (trains if 20+ hours since last training)
alias pfa='source ~/game/football_env/bin/activate && python ~/game/auto_train.py'

# Force train (trains regardless of time)
alias pfaf='source ~/game/football_env/bin/activate && python ~/game/auto_train.py --force'

# Check training status
alias pfas='source ~/game/football_env/bin/activate && python ~/game/auto_train.py --status'

# Daily training script
alias pfd='source ~/game/football_env/bin/activate && python ~/game/daily_train.py'

# ============================================================
# HISTORICAL DATA FUNCTIONS (require arguments)
# ============================================================

# Scrape historical matches for a date range
# Usage: pfh --start 2026-01-25 --end 2026-02-11
pfh() {
    source ~/game/football_env/bin/activate && python ~/game/scrape_historical.py "$@"
}

# Scrape historical matches for specific date
# Usage: pfhd 2026-01-25
pfhd() {
    source ~/game/football_env/bin/activate && python ~/game/scrape_historical.py --date "$1"
}

# Scrape last N days
# Usage: pfhn 7
pfhn() {
    source ~/game/football_env/bin/activate && python ~/game/scrape_historical.py --days "$1"
}

# Rebuild training database
# Usage: pfrb (rebuild all) or pfrb --start 2026-01-25 --end 2026-02-11
pfrb() {
    source ~/game/football_env/bin/activate && python ~/game/rebuild_data.py "$@"
}

# ============================================================
# LEAGUE DATABASE ALIASES
# ============================================================

# Build league database
alias pfld='source ~/game/football_env/bin/activate && python ~/game/build_league_db.py'

# Scrape all leagues
alias pfsl='source ~/game/football_env/bin/activate && python ~/game/scrape_all_leagues.py'

# Update league database
alias pflu='source ~/game/football_env/bin/activate && python ~/game/update_league_db.py'

# ============================================================
# MODEL STATISTICS ALIASES
# ============================================================

# Show model statistics
alias pfms='source ~/game/football_env/bin/activate && python ~/game/model_stats.py'

# Show system statistics
alias pfss='source ~/game/football_env/bin/activate && python ~/game/football_prediction_system.py stats'

# Calculate weights
alias pfcw='source ~/game/football_env/bin/activate && python ~/game/calculate_weights.py'

# ============================================================
# EXTRACTION ALIASES
# ============================================================

# Extract results from results.txt
alias pfe='source ~/game/football_env/bin/activate && python ~/game/extract_results.py'

# ============================================================
# HELPER FUNCTIONS
# ============================================================

# Show help
pfhelp() {
    echo "Football Predictor Commands:"
    echo ""
    echo "PREDICTION:"
    echo "  pf <url>              - Predict match from URL"
    echo "  pfr <url>             - Add match result from URL"
    echo ""
    echo "TRAINING:"
    echo "  pft                   - Train model"
    echo "  pfa                   - Auto-train (if 20+ hours since last)"
    echo "  pfaf                  - Force auto-train now"
    echo "  pfas                  - Check training status"
    echo "  pfd                   - Run daily training script"
    echo ""
    echo "HISTORICAL DATA:"
    echo "  pfh --start DATE --end DATE  - Scrape date range"
    echo "  pfhd DATE             - Scrape specific date (e.g., pfhd 2026-01-25)"
    echo "  pfhn DAYS             - Scrape last N days (e.g., pfhn 7)"
    echo "  pfrb                  - Rebuild training database"
    echo "  pfrb --start DATE --end DATE - Rebuild specific range"
    echo ""
    echo "LEAGUE DATABASE:"
    echo "  pfld                  - Build league database"
    echo "  pfsl                  - Scrape all leagues"
    echo "  pflu                  - Update league database"
    echo ""
    echo "STATISTICS:"
    echo "  pfms                  - Show model statistics"
    echo "  pfss                  - Show system statistics"
    echo "  pfcw                  - Calculate data-driven weights"
    echo ""
    echo "EXTRACTION:"
    echo "  pfe                   - Extract results from results.txt"
    echo ""
    echo "HELP:"
    echo "  pfhelp                - Show this help message"
}
