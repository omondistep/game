#!/bin/bash
# Football Prediction System - Model Statistics Command
# Usage: fbstats

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
VENV_DIR="${SCRIPT_DIR}/football_env"
STATS="${SCRIPT_DIR}/model_stats.py"

if [ ! -d "$VENV_DIR" ]; then
    echo "Error: Virtual environment not found at $VENV_DIR"
    exit 1
fi

if [ ! -f "$STATS" ]; then
    echo "Error: model_stats.py not found"
    exit 1
fi

"$VENV_DIR/bin/python" "$STATS"
